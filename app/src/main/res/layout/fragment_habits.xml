        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="180dp"
            android:elevation="90dp">

            <TextView
                android:id="@+id/habits_ft_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:background="@color/lavender"
                android:padding="5dp"
                android:text="Create A Habit"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/white"
                android:visibility="invisible" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/habits_ft_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:backgroundTint="#07bca4"
                android:translationZ="90dp"
                android:src="@drawable/baseline_add"
                android:visibility="invisible"
                app:fabSize="mini"
                app:pressedTranslationZ="12dp" />

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:id="@+id/habits_plus_btn"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="105dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#6A1B9A"
            android:translationZ="90dp"
            android:src="@drawable/baseline_add"
            android:layout_height="wrap_content" />



        <RelativeLayout
            android:id="@+id/groupedContainer"
            android:layout_width="380dp"
            android:layout_height="622dp"
            android:layout_margin="16dp"
            android:elevation="2dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toTopOf="@+id/groupedContainer2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/habitRCV"
                android:layout_width="298dp"
                android:layout_height="619dp"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:cacheColorHint="@android:color/transparent"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1dp"
                android:scrollbars="vertical" />
        </RelativeLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>



</LinearLayout>