<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lavender"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="427dp"
        android:layout_height="600dp"

        android:layout_marginBottom="40dp"
        android:overScrollMode="never"
        android:scrollbars="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"


            tools:ignore="ExtraText">

            //gold

            <androidx.cardview.widget.CardView
                android:id="@+id/CardView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"

                tools:ignore="ExtraText">>

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="1in"
                    android:layout_height="1in"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white"
                    android:elevation="3dp"
                    android:src="@drawable/gold">

                </ImageView>

                <TextView
                    android:id="@+id/tView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingLeft="1.1in"
                    android:text="Gold medal unlocked – your exceptional efforts have triumphed!"
                    android:textColor="#673AB7"
                    android:textSize="20dp"
                    android:textStyle="bold"


                    >


                </TextView>
                //Gold

            </androidx.cardview.widget.CardView>

            //Silver

            <androidx.cardview.widget.CardView
                android:id="@+id/CardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"

                >

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="1in"
                    android:layout_height="1in"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white"
                    android:elevation="3dp"
                    android:src="@drawable/silver">

                </ImageView>

                <TextView
                    android:id="@+id/tView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingLeft="1.1in"
                    android:text="Silver win! Your outstanding effort shines bright."
                    android:textColor="#673AB7"
                    android:textSize="20dp"
                    android:textStyle="bold"


                    >

                </TextView>

            </androidx.cardview.widget.CardView>

            //Bronze

            <androidx.cardview.widget.CardView
                android:id="@+id/CardView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"

                >>

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="1in"
                    android:layout_height="1in"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white"
                    android:elevation="3dp"
                    android:src="@drawable/bronze">

                </ImageView>

                <TextView
                    android:id="@+id/tView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingLeft="1.1in"
                    android:text="Bronze victory! Your excellence stands out."
                    android:textColor="#673AB7"
                    android:textSize="20dp"
                    android:textStyle="bold"


                    >

                </TextView>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/CardView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"

                >

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="1in"
                    android:layout_height="1in"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white"
                    android:elevation="3dp"
                    android:src="@drawable/bronze">

                </ImageView>

                <TextView
                    android:id="@+id/tView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingLeft="1.1in"
                    android:text="Bronze victory! Your excellence stands out."
                    android:textColor="#673AB7"
                    android:textSize="20dp"
                    android:textStyle="bold"


                    >

                </TextView>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/CardView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"

                >

                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="1in"
                    android:layout_height="1in"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white"
                    android:elevation="3dp"
                    android:src="@drawable/silver">

                </ImageView>

                <TextView
                    android:id="@+id/tView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingLeft="1.1in"
                    android:text="Silver win! Your outstanding effort shines bright."
                    android:textColor="#673AB7"
                    android:textSize="20dp"
                    android:textStyle="bold"


                    >

                </TextView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/CardView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"

                tools:ignore="ExtraText">>

                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="1in"
                    android:layout_height="1in"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white"
                    android:elevation="3dp"
                    android:src="@drawable/gold">

                </ImageView>

                <TextView
                    android:id="@+id/tView6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingLeft="1.1in"
                    android:text="Gold medal unlocked – your exceptional efforts have triumphed!"
                    android:textColor="#673AB7"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    >


                </TextView>
                //Gold

            </androidx.cardview.widget.CardView>


        </LinearLayout>



    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="600dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginStart="289dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="55dp"
            android:layout_marginBottom="16dp"
            android:text="Back"
             />

    </LinearLayout>


</RelativeLayout>
